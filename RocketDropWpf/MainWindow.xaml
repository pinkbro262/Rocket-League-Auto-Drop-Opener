<Window x:Class="RocketDropWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rocket League Auto Drop — Opener"
        Width="540"
        MinHeight="380"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Hintergrundbild -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/pinkRocket.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <SolidColorBrush x:Key="BgCard" Color="#AA101315"/>
        <!-- halbtransparent -->
        <SolidColorBrush x:Key="Accent" Color="#5AC8FA"/>
        <SolidColorBrush x:Key="Accent2" Color="#7B61FF"/>
        <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSub" Color="#CCFFFFFF"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5AC8FA" Offset="0"/>
                        <GradientStop Color="#7B61FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#1A000000"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Margin="18" Padding="18" Background="{StaticResource BgCard}" CornerRadius="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel>
                    <TextBlock Text="Rocket League Auto Drop Opener"
                               Foreground="{StaticResource TextMain}"
                               FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Have fun with the drop opening — wishes you PinkBro!"
                               Foreground="{StaticResource TextSub}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Form -->
                <Grid Grid.Row="1" Margin="0,14,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Inputs -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Start hotkey:" Grid.Row="0" Grid.Column="0"
                                   Foreground="{StaticResource TextSub}" VerticalAlignment="Center"/>
                        <TextBox x:Name="StartKeyBox" Grid.Row="0" Grid.Column="1" Text="F1"
                                 PreviewKeyDown="StartKeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus" LostFocus="HotkeyBox_LostFocus"/>

                        <TextBlock Text="Stop / Exit hotkey:" Grid.Row="1" Grid.Column="0" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextSub}" VerticalAlignment="Center"/>
                        <TextBox x:Name="StopKeyBox" Grid.Row="1" Grid.Column="1" Text="F2" Margin="0,8,0,0"
                                 PreviewKeyDown="StopKeyBox_PreviewKeyDown"
                                 GotFocus="HotkeyBox_GotFocus" LostFocus="HotkeyBox_LostFocus"/>

                        <TextBlock Text="Game process:" Grid.Row="2" Grid.Column="0" Margin="0,8,0,0"
                                   Foreground="{StaticResource TextSub}" VerticalAlignment="Center"/>
                        <TextBox x:Name="GameProcBox" Grid.Row="2" Grid.Column="1"
                                 Text="RocketLeague.exe" Margin="0,8,0,0"
                                 IsReadOnly="True" IsReadOnlyCaretVisible="False"/>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button x:Name="StartBtn" Content="Start" Width="120" Margin="6" Click="StartBtn_Click"/>
                        <Button x:Name="StopBtn" Content="Stop" Width="120" Margin="6" Click="StopBtn_Click"/>
                    </StackPanel>

                    <!-- Status badge -->
                    <Border x:Name="StatusBadge" Grid.Row="2"
                            CornerRadius="10" Padding="10" Margin="0,12,0,12"
                            Background="#AA3333" HorizontalAlignment="Stretch">
                        <TextBlock x:Name="StatusText" Text="Status: idle"
                                   Foreground="White" FontWeight="SemiBold" TextAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Footer -->
                <TextBlock Grid.Row="2"
                           Text="Tip: run as Admin for global hotkeys • Start/Stop keys are changeable"
                           Foreground="{StaticResource TextSub}" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>